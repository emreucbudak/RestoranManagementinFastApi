<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestoranManagementAdminPanel.Pages.AdminPanel"
            
             BackgroundColor="#F5F5F5">

    <Grid>
        <!-- Üst Başlık Alanı -->
        <Border BackgroundColor="#E67E22"
                VerticalOptions="Start"
                HeightRequest="80">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.2" Radius="10" Offset="0,2"/>
            </Border.Shadow>

            <HorizontalStackLayout Padding="20"
                                   VerticalOptions="Center"
                                   Spacing="15">
                <Label Text="🍽️"
                       FontSize="32"
                       VerticalOptions="Center"/>
                <Label Text="Admin Paneli"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </Border>

        <!-- Orta Alan - Butonlar -->
        <VerticalStackLayout Spacing="20"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Padding="40">

            <!-- Restoran Ekle Butonu -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    WidthRequest="300"
                    HeightRequest="80">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="15" Offset="0,4"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer />
                </Border.GestureRecognizers>

                <HorizontalStackLayout Spacing="15"
                                       Padding="20"
                                       VerticalOptions="Center">
                    <Label Text="🏪"
                           FontSize="32"
                           VerticalOptions="Center"/>
                    <Label Text="Restoran Ekle"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Restoran Yöneticisi Ekle Butonu -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    WidthRequest="300"
                    HeightRequest="80">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="15" Offset="0,4"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer />
                </Border.GestureRecognizers>

                <HorizontalStackLayout Spacing="15"
                                       Padding="20"
                                       VerticalOptions="Center">
                    <Label Text="👤"
                           FontSize="32"
                           VerticalOptions="Center"/>
                    <Label Text="Restoran Yöneticisi Ekle"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Çıkış Butonu -->
            <Border BackgroundColor="#E74C3C"
                    StrokeThickness="0"
                    WidthRequest="300"
                    HeightRequest="80"
                    Margin="0,20,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.2" Radius="15" Offset="0,4"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer />
                </Border.GestureRecognizers>

                <HorizontalStackLayout Spacing="15"
                                       Padding="20"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center">
                    <Label Text="🚪"
                           FontSize="32"
                           VerticalOptions="Center"/>
                    <Label Text="Çıkış"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

        </VerticalStackLayout>

    </Grid>

</ContentPage>