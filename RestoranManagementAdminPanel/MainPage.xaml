<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestoranManagementAdminPanel.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20"
            VerticalOptions="Center">

            <!-- Logo ve Başlık Alanı -->
            <Border 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="40,30">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="20" Offset="0,4"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">

                    <!-- Logo -->
                    <Border WidthRequest="120"
                            HeightRequest="120"
                            StrokeThickness="0"
                            BackgroundColor="White"
                            HorizontalOptions="Center"
                            Padding="0"
                            Margin="0,0,0,10">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="60"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.3" Radius="15" Offset="0,8"/>
                        </Border.Shadow>
                        <Label Text="🍽️"
                               FontSize="60"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <!-- Başlık -->
                    <Label
                        Text="Restoran Yönetim"
                        FontSize="28"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        TextColor="#2C3E50" />

                    <Label
                        Text="Admin Paneli"
                        FontSize="18"
                        HorizontalTextAlignment="Center"
                        TextColor="#7F8C8D"
                        Margin="0,0,0,20" />

                    <!-- Kullanıcı Adı -->
                    <Label
                        Text="Kullanıcı Adı"
                        FontSize="14"
                        TextColor="#34495E"
                        FontAttributes="Bold" />

                    <Border
                        Stroke="#BDC3C7"
                        StrokeThickness="1"
                        Padding="15,5"
                        BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry
                            x:Name="UsernameEntry"
                            Placeholder="Kullanıcı adınızı girin"
                            PlaceholderColor="#95A5A6"
                            TextColor="#2C3E50"
                            FontSize="16" />
                    </Border>

                    <!-- Şifre -->
                    <Label
                        Text="Şifre"
                        FontSize="14"
                        TextColor="#34495E"
                        FontAttributes="Bold"
                        Margin="0,10,0,0" />

                    <Border
                        Stroke="#BDC3C7"
                        StrokeThickness="1"
                        Padding="15,5"
                        BackgroundColor="White">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Entry
                            x:Name="PasswordEntry"
                            Placeholder="Şifrenizi girin"
                            PlaceholderColor="#95A5A6"
                            TextColor="#2C3E50"
                            IsPassword="True"
                            FontSize="16" />
                    </Border>

                    <!-- Giriş Butonu -->
                    <Button
                        x:Name="LoginButton"
                        Text="Giriş Yap"
                        BackgroundColor="#E67E22"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="0,20,0,0"
                         Clicked="onLoginButton"/>

                </VerticalStackLayout>
            </Border>

            <!-- Alt Bilgi -->
            <Label
                Text="© 2025 Restoran Yönetim Sistemi"
                FontSize="12"
                TextColor="#95A5A6"
                HorizontalTextAlignment="Center"
                Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>