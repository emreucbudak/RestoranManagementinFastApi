<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestoranManagementinFastApi.Pages.WaiterLogin"
             BackgroundColor="#4CAF50">

    <Grid>
        <!-- Geri Butonu -->
        <Border WidthRequest="45"
                HeightRequest="45"
                BackgroundColor="White"
                StrokeThickness="0"
                Margin="20,45,0,0"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                ZIndex="1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="22.5"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.25" Radius="10" Offset="0,4"/>
            </Border.Shadow>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackButtonClicked"/>
            </Border.GestureRecognizers>
            <Label Text="←"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#4CAF50"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,0,2,0"/>
        </Border>

        <ScrollView>
            <VerticalStackLayout Spacing="40" 
                                Padding="30"
                                VerticalOptions="Center"
                                Margin="0,60,0,0">

                <!-- Logo Icon -->
                <Border WidthRequest="120"
                        HeightRequest="120"
                        StrokeThickness="0"
                        BackgroundColor="White"
                        HorizontalOptions="Center"
                        Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="60"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.3" Radius="15" Offset="0,8"/>
                    </Border.Shadow>
                    <Label Text="🍴"
                           FontSize="60"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>

                <!-- Başlık -->
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Garson Paneli"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <Label Text="Giriş Yapın"
                           FontSize="18"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Form Alanı -->
                <Border StrokeThickness="0"
                        BackgroundColor="White"
                        Padding="30">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.2" Radius="15" Offset="0,8"/>
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="25">

                        <!-- Kullanıcı Adı -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Kullanıcı Adı"
                                   FontSize="14"
                                   TextColor="#333333"
                                   FontAttributes="Bold"/>
                            <Border Padding="0"
                                    Stroke="#E0E0E0"
                                    StrokeThickness="1"
                                    BackgroundColor="Transparent">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="Auto,*" Padding="15,0">
                                    <Label Text="👤"
                                           FontSize="20"
                                           VerticalOptions="Center"
                                           Margin="0,0,10,0"/>
                                    <Entry Grid.Column="1"
                                           x:Name="UsernameEntry"
                                           Placeholder="Kullanıcı adınızı girin"
                                           PlaceholderColor="#AAAAAA"
                                           TextColor="#333333"
                                           BackgroundColor="Transparent"
                                           HeightRequest="45"/>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Şifre -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Şifre"
                                   FontSize="14"
                                   TextColor="#333333"
                                   FontAttributes="Bold"/>
                            <Border Padding="0"
                                    Stroke="#E0E0E0"
                                    StrokeThickness="1"
                                    BackgroundColor="Transparent">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="Auto,*" Padding="15,0">
                                    <Label Text="🔒"
                                           FontSize="20"
                                           VerticalOptions="Center"
                                           Margin="0,0,10,0"/>
                                    <Entry Grid.Column="1"
                                           x:Name="PasswordEntry"
                                           Placeholder="Şifrenizi girin"
                                           PlaceholderColor="#AAAAAA"
                                           TextColor="#333333"
                                           IsPassword="True"
                                           BackgroundColor="Transparent"
                                           HeightRequest="45"/>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Giriş Butonu -->
                        <Button x:Name="LoginButton"
                                Text="GİRİŞ YAP"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="16"
                                CornerRadius="25"
                                HeightRequest="55"
                                Margin="0,10,0,0"
                            />

                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>