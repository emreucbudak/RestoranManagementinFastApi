<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestoranManagementinFastApi.Pages.Login"
             Title="Login"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <!-- Üst Kısım - Logo ve Başlık Alanı -->
            <Grid BackgroundColor="#FF6B35" HeightRequest="280" Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo Icon -->
                <Border Grid.Row="0"
                        WidthRequest="100"
                        HeightRequest="100"
                        StrokeThickness="0"
                        BackgroundColor="White"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="50"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.3" Radius="10" Offset="0,5"/>
                    </Border.Shadow>
                    <Label Text="🍽️"
                           FontSize="50"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>

                <!-- Başlık -->
                <Label Grid.Row="1"
                       Text="Restoran Yönetim"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,15,0,0"/>

                <Label Grid.Row="2"
                       Text="Giriş Yapın"
                       FontSize="16"
                       TextColor="White"
                       Opacity="0.9"
                       HorizontalOptions="Center"
                       Margin="0,5,0,0"/>
            </Grid>

            <!-- Form Alanı -->
            <Border Margin="20,-40,20,20"
                    StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="30">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.15" Radius="15" Offset="0,5"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="25">

                    <!-- Kullanıcı Adı -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Kullanıcı Adı"
                               FontSize="14"
                               TextColor="#333333"
                               FontAttributes="Bold"/>
                        <Border Padding="0"
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                BackgroundColor="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*" Padding="15,0">
                                <Label Text="👤"
                                       FontSize="20"
                                       VerticalOptions="Center"
                                       Margin="0,0,10,0"/>
                                <Entry Grid.Column="1"
                                       x:Name="UsernameEntry"
                                       Placeholder="Kullanıcı adınızı girin"
                                       PlaceholderColor="#AAAAAA"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       HeightRequest="45"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Şifre -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Şifre"
                               FontSize="14"
                               TextColor="#333333"
                               FontAttributes="Bold"/>
                        <Border Padding="0"
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                BackgroundColor="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="15,0">
                                <Label Text="🔒"
                                       FontSize="20"
                                       VerticalOptions="Center"
                                       Margin="0,0,10,0"/>
                                <Entry Grid.Column="1"
                                       x:Name="PasswordEntry"
                                       Placeholder="Şifrenizi girin"
                                       PlaceholderColor="#AAAAAA"
                                       TextColor="#333333"
                                       IsPassword="True"
                                       BackgroundColor="Transparent"
                                       HeightRequest="45"/>
                                <Label Grid.Column="2"
                                       x:Name="ShowPasswordLabel"
                                       Text="👁️"
                                       FontSize="18"
                                       VerticalOptions="Center"
                                       Margin="10,0,0,0">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Şifremi Unuttum -->
                    <Label Text="Şifremi Unuttum?"
                           FontSize="13"
                           TextColor="#FF6B35"
                           FontAttributes="Bold"
                           HorizontalOptions="End"
                           Margin="0,-10,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer />
                        </Label.GestureRecognizers>
                    </Label>

                    <!-- Giriş Butonu -->
                    <Button x:Name="LoginButton"
                            Text="GİRİŞ YAP"
                            BackgroundColor="#FF6B35"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="16"
                            CornerRadius="25"
                            HeightRequest="55"
                            Margin="0,10,0,0"
                            />

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>