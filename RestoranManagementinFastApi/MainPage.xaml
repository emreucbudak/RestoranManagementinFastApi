<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestoranManagementinFastApi.MainPage"
             >

    <Grid>
        <!-- Arka Plan Gradient -->
        <BoxView>
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF6B35" Offset="0.0"/>
                    <GradientStop Color="#FF8C42" Offset="1.0"/>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- İçerik -->
        <ScrollView>
            <VerticalStackLayout Spacing="0" Padding="30" VerticalOptions="Center">

                <!-- Logo ve Başlık Alanı -->
                <VerticalStackLayout Spacing="20" Margin="0,0,0,60">

                    <!-- Logo -->
                    <Border WidthRequest="120"
                            HeightRequest="120"
                            StrokeThickness="0"
                            BackgroundColor="White"
                            HorizontalOptions="Center"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="60"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.3" Radius="15" Offset="0,8"/>
                        </Border.Shadow>
                        <Label Text="🍽️"
                               FontSize="60"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <!-- Başlık -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Restoran Yönetim"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>

                        <Label Text="Sistemi"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Margin="0,-15,0,0"/>

                        <Label Text="Giriş yapmak için rolünüzü seçin"
                               FontSize="15"
                               TextColor="White"
                               Opacity="0.9"
                               HorizontalOptions="Center"
                               Margin="0,15,0,0"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>

                <!-- Butonlar -->
                <VerticalStackLayout Spacing="20">

                    <!-- Yönetici Butonu -->
                    <Border StrokeThickness="0"
                            BackgroundColor="White"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.2" Radius="10" Offset="0,5"/>
                        </Border.Shadow>
                        <Grid Padding="25"
                              RowDefinitions="Auto,Auto"
                              ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="onRestaurantManagerLoginTransfer"/>
                            </Grid.GestureRecognizers>

                            <!-- Icon -->
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    WidthRequest="55"
                                    HeightRequest="55"
                                    StrokeThickness="0"
                                    BackgroundColor="#FFF0EB"
                                    VerticalOptions="Center"
                                    Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="15"/>
                                </Border.StrokeShape>
                                <Label Text="👨‍💼"
                                       FontSize="28"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Text -->
                            <Label Grid.Row="0"
                                   Grid.Column="1"
                                   Text="Restoran Yöneticisi"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   VerticalOptions="End"
                                   Margin="15,0,0,0"/>

                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   Text="Yönetim paneline giriş yap"
                                   FontSize="13"
                                   TextColor="#888888"
                                   VerticalOptions="Start"
                                   Margin="15,2,0,0"/>

                            <!-- Arrow -->
                            <Label Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Grid.Column="2"
                                   Text="›"
                                   FontSize="35"
                                   TextColor="#FF6B35"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Garson Butonu -->
                    <Border StrokeThickness="0"
                            BackgroundColor="White"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.2" Radius="10" Offset="0,5"/>
                        </Border.Shadow>
                        <Grid Padding="25"
                              RowDefinitions="Auto,Auto"
                              ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="onWaiterLoginTransfer" />
                            </Grid.GestureRecognizers>

                            <!-- Icon -->
                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    WidthRequest="55"
                                    HeightRequest="55"
                                    StrokeThickness="0"
                                    BackgroundColor="#FFF0EB"
                                    VerticalOptions="Center"
                                    Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="15"/>
                                </Border.StrokeShape>
                                <Label Text="🍴"
                                       FontSize="28"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>

                            <!-- Text -->
                            <Label Grid.Row="0"
                                   Grid.Column="1"
                                   Text="Garson Girişi"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   VerticalOptions="End"
                                   Margin="15,0,0,0"/>

                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   Text="Sipariş yönetimi için giriş yap"
                                   FontSize="13"
                                   TextColor="#888888"
                                   VerticalOptions="Start"
                                   Margin="15,2,0,0"/>

                            <!-- Arrow -->
                            <Label Grid.Row="0"
                                   Grid.RowSpan="2"
                                   Grid.Column="2"
                                   Text="›"
                                   FontSize="35"
                                   TextColor="#FF6B35"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"/>
                        </Grid>
                    </Border>

                </VerticalStackLayout>

                <!-- Alt Bilgi -->
                <Label Text="© 2025 Restoran Yönetim Sistemi"
                       FontSize="12"
                       TextColor="White"
                       Opacity="0.7"
                       HorizontalOptions="Center"
                       Margin="0,40,0,20"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>